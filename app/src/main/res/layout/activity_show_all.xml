<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#59A85C"
    tools:context=".activity.ShowAllActivity">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/home"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:id="@+id/imgHomeShowAll"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_all"
        android:textSize="30sp"
        android:textColor="#E8E807"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvTitleShowAll"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rcvShowAll"
        android:layout_below="@+id/tvTitleShowAll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>