<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:background="#DA7F78"
    android:paddingVertical="15dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginHorizontal="20dp"
        android:id="@+id/tvTitleDialogSelectMember"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_members"
        android:textSize="25sp"
        android:textColor="#FFFF2A"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvSelectMember"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitleDialogSelectMember"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/btCancelSelectMember"
        android:layout_below="@id/rcvSelectMember"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ok"
        android:id="@+id/btOkSelectMember"
        android:layout_below="@id/rcvSelectMember"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"/>

</RelativeLayout>